<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.dao.MyFileDao">
    <resultMap id="MyFileMap" type="MyFile">
        <id property="fileId" column="file_id"/>
        <result property="fileRepositoryId" column="file_repository_id"/>
        <result property="parentFolderId" column="parent_folder_id"/>
        <result property="fileName" column="file_name"/>
        <result property="filePath" column="file_path"/>
        <result property="uploadTime" column="upload_time"/>
        <result property="size" column="size"/>
        <result property="type" column="type"/>
        <result property="state" column="state"/>
    </resultMap>
<!--    所有列-->
    <sql id="allColumn" >
        file_id,file_repository_id,parent_folder_id,file_name,file_path,upload_time,size,type,state
    </sql>
<!--    添加语句的字段列表-->
    <sql id="insertColumn">
        <if test="fileId != null  ">
            file_id,
        </if>
        <if test="fileRepositoryId!=null">
            file_repository_id,
        </if>
        <if test="parentFolderId!=null">
            parent_folder_id,
        </if>
        <if test="fileName!=null">
            file_name,
        </if>
        <if test="filePath !=null">
            file_path,
        </if>
        <if test="uploadTime !=null">
            upload_time,
        </if>
        <if test="size !=null">
            size,
        </if>
        <if test="type != null">
            type,
        </if>
        <if test="state != null">
            state
        </if>
    </sql>
<!--    添加语句的值列表-->
    <sql id="insertValue">
        <if test="fileId != null  ">
            #{fileId},
        </if>
        <if test="fileRepositoryId!=null">
            #{fileRepositoryId},
        </if>
        <if test="parentFolderId!=null">
            #{parentFolderId},
        </if>
        <if test="fileName!=null">
            #{fileName},
        </if>
        <if test="filePath !=null">
            #{filePath},
        </if>
        <if test="uploadTime !=null">
            #{uploadTime},
        </if>
        <if test="size !=null">
            #{size},
        </if>
        <if test="type != null">
            #{type},
        </if>
        <if test="state != null">
            #{state}
        </if>
    </sql>
<!--    修改文件信息-->
    <sql id="updateValue">
        <if test="fileId != null  ">
            file_id=#{fileId},
        </if>
        <if test="fileRepositoryId!=null">
            file_repository_id=#{fileRepositoryId},
        </if>
        <if test="parentFolderId!=null">
            file_folder_id=#{parentFolderId},
        </if>
        <if test="fileName!=null">
            file_name=#{fileName},
        </if>
        <if test="filePath !=null">
            file_path=#{filePath},
        </if>
        <if test="uploadTime !=null">
            upload_time=#{uploadTime},
        </if>
        <if test="size !=null">
            size=#{size},
        </if>
        <if test="type != null">
            type=#{type},
        </if>
        <if test="state != null">
            state=#{state}
        </if>
    </sql>

<!--    添加文件-->
    <insert id="insertFile">
        insert into my_file
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="insertColumn"/>
        </trim>

        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="insertValue"/>
        </trim>
    </insert>

    <select id="getFileByParentFolderId" resultMap="MyFileMap">
        select
        <include refid="allColumn"/>
        from my_file
        where parent_folder_id=#{parentFolderId}
    </select>

    <delete id="deleteFile" >
        delete from my_file
        where file_id=#{fileId}
    </delete>

    <update id="updateFileName" >
        update from my_file
        set file_name =#{fileName}
        where file_id=#{fileId}
    </update>

    <select id="getFileByPath" resultMap="MyFileMap">
        select
        <include refid="allColumn"/>
        from my_file
        where file_path=#{filePath}
    </select>

    <delete id="deleteFileByPath">
        delete * from my_file
        where file_path in
        <foreach collection="list" item="path" open="(" separator="," close=")">
            #{filePath}
        </foreach>
    </delete>
</mapper>