<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.dao.UserDao">
    <resultMap id="userMap" type="User">
        <id column="user_id" property="userId" />
        <result column="file_repository_id" property="fileRepositoryId"/>
        <result column="user_name" property="userName"/>
        <result column="email" property="email"/>

        <result column="password" property="password"/>
        <result column="register_time" property="registerTime"/>
        <result column="avatar" property="avatar"/>
        <result column="role" property="role"/>
    </resultMap>
    <!--全部字段-->
    <sql id="allColumn"> user_id, file_repository_id, user_name,email,password,register_time, avatar,role</sql>

    <!--添加语句的字段列表-->
    <sql id="insertColumn">
        <if test="userId != null ">
            user_id,
        </if>
        <if test="fileRepositoryId != null ">
            file_repository_id,
        </if>
        <if test="userName != null ">
            user_name,
        </if>
        <if test="email != null ">
            email,
        </if>
        <if test="password != null ">
            password,
        </if>
        <if test="registerTime != null">
            register_time,
        </if>
        <if test="avatar != null ">
            avatar,
        </if>
        <if test="role != null ">
            role
        </if>
    </sql>
    <!--添加语句的值列表-->
    <sql id="insertValue">
        <if test="userId != null ">
            #{userId},
        </if>
        <if test="fileRepositoryId != null " >
            #{fileRepositoryId},
        </if>
        <if test="userName != null ">
            #{userName},
        </if>
        <if test="email != null ">
            #{email},
        </if>
        <if test="password != null ">
            #{password},
        </if>
        <if test="registerTime != null">
            #{registerTime},
        </if>
        <if test="avatar != null ">
            #{avatar},
        </if>
        <if test="role != null ">
            #{role}
        </if>
    </sql>
    <!-- 修改用户信息    -->
    <sql id="updateValue">
        <if test="userId != null ">
            user_id=#{userId},
        </if>
        <if test="fileRepositoryId != null " >
            file_respository_id=#{fileRepositoryId},
        </if>
        <if test="userName != null ">
            user_name=#{userName},
        </if>
        <if test="email != null ">
            email=#{email},
        </if>
        <if test="password != null ">
            password#{password},
        </if>
        <if test="registerTime != null">
            register_time#{registerTime},
        </if>
        <if test="avatar != null ">
            avatar=#{avatar},
        </if>
        <if test="role != null ">
            role=#{role}
        </if>
    </sql>
    <!--添加用户-->
    <insert id="insertUser">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="insertColumn"/>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="insertValue"/>
        </trim>
    </insert>

    <!--通过邮箱查询-->
    <select id="selectByEmail" resultMap="userMap">
        select
        <include refid="allColumn"/>
        from user
        <where>
            email=#{email}
        </where>
    </select>
    <!--通过用户名查询-->
    <select id="selectByUserName" resultMap="userMap">
        select
        <include refid="allColumn"/>
        from user
        <where>
            user_name=#{userName}
        </where>
    </select>
    <!-- 修改用户信息   -->
    <update id="updateUser" >
        update user
        <set>
            <include refid="updateValue"/>
        </set>
        <where>
            user_id=#{userId}
        </where>
    </update>
    <!-- 通过id删除用户   -->
    <delete id="deleteUserById">
        delete from user
        <where>
            user_id=#{userId}
        </where>
    </delete>
</mapper>